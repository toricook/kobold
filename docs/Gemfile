source "https://rubygems.org"

gem "jekyll", "~> 4.3"
gem "just-the-docs", "0.10.0"

group :jekyll_plugins do
  gem "jekyll-seo-tag"
  gem "jekyll-github-metadata"
end

# Windows support
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end

gem "wdm", "~> 0.1", :platforms => [:mingw, :x64_mingw, :mswin]
